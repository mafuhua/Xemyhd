<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_bg">

        <TextView
            android:id="@+id/tv_title_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rg_home"
        android:background="@drawable/cd3x"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_shouye"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/color_radiobutton"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/rb_home_kuaidi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:textColor="@drawable/color_radiobutton"
            android:padding="5dp"
            android:text="快递"
            />


        <RadioButton
            android:id="@+id/rb_home_gouwuche"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:textColor="@drawable/color_radiobutton"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:padding="5dp"
            android:text="购物车"
            />

        <RadioButton
            android:id="@+id/rb_home_wode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:textColor="@drawable/color_radiobutton"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            />
    </RadioGroup>
</LinearLayout>
