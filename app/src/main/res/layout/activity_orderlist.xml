<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>

    <com.gigamole.library.navigationtabstrip.NavigationTabStrip
        android:id="@+id/nts_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:nts_active_color="@color/titlebar_bg"
        app:nts_color="@color/titlebar_bg"
        app:nts_corners_radius="1dp"
        app:nts_inactive_color="#ff1a1e23"
        app:nts_size="15sp"
        app:nts_titles="@array/titles"
        app:nts_weight="3dp"/>
    <com.yuen.xemyhd.pagers.LazyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.yuen.xemyhd.pagers.LazyViewPager>

</LinearLayout>
